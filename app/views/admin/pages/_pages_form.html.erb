<%= tinymce_assets %>
<%= tinymce %>
<%= form_for [:admin, @page] do |f| %>
  <div class="field">
    <%= f.label :about_us %><br />
    <%= f.text_area :about_us, :class => 'tinymce', :rows => 30, :cols => 120 %>
  </div>
  <div class="field">
    <%= f.label :contact_us %><br />
    <%= f.text_area :contact_us, :class => 'tinymce', :rows => 30, :cols => 120 %>
  </div>
  <div class="field">
    <%= f.label :faq %><br />
    <%= f.text_area :faq, :class => 'tinymce', :rows => 30, :cols => 120 %>
  </div>
  <div class="field">
    <%= f.label :conditions %><br />
    <%= f.text_area :conditions, :class => 'tinymce', :rows => 30, :cols => 120 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>